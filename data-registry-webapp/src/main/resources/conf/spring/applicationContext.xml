<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.context.support.ServletContextPropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/registry.properties</value>
            </list>
        </property>
    </bean>

    <bean id="applicationContext" class="net.metadata.dataspace.app.ApplicationContext" init-method="init">
        <constructor-arg value="${data.registry.version}"/>
    </bean>

    <bean id="dataRegistryApplication" class="net.metadata.dataspace.app.DataRegistryApplication">
        <property name="configuration" ref="applicationContext"/>
    </bean>
</beans>