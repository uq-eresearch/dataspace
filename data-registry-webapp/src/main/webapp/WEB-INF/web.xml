<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>

    <display-name>Seeding the Commons</display-name>
    <description>Seeding the Commons project</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/conf/spring/applicationContext.xml</param-value>
    </context-param>

    <!--Listeners-->
    <listener>
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <!--Servlets-->
    <servlet>
        <servlet-name>registryServiceServlet</servlet-name>
        <servlet-class>net.metadata.dataspace.servlets.RegistryServiceProviderServlet</servlet-class>
    </servlet>

    <!--Servlet Mappings-->
    <servlet-mapping>
        <servlet-name>registryServiceServlet</servlet-name>
        <url-pattern>/parties/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registryServiceServlet</servlet-name>
        <url-pattern>/collections/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file id="welcome-page">index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
